{
  "name": "cloudflare-multitenant-workers",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev:mrrainbowsmoke": "wrangler dev --config tenants/mrrainbowsmoke/wrangler.toml",
    "dev:rainbowsmokeofficial": "wrangler dev --config tenants/rainbowsmokeofficial/wrangler.toml",
    "dev:worker-api": "wrangler dev --config apps/worker-api/wrangler.toml",
    "deploy:mrrainbowsmoke": "wrangler deploy --config tenants/mrrainbowsmoke/wrangler.toml",
    "deploy:rainbowsmokeofficial": "wrangler deploy --config tenants/rainbowsmokeofficial/wrangler.toml",
    "test": "vitest run",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.9.0",
    "@cloudflare/workers-types": "^4.20260124.0",
    "typescript": "^5.6.3",
    "vitest": "^2.1.8",
    "wrangler": "^3.109.0"
  }
}
